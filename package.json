{
  "name": "mashed",
  "version": "0.0.1",
  "description": "A framework based on the idea of ​​EDA with a more declarative approach to implementing business scenarios of your application",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "node esbuild.config.js",
    "dev": "nodemon --watch dist --exec node dist/index.js",
    "watch": "concurrently \"node esbuild.config.js --watch\" \"npm run dev\"",
    "start": "node dist/index.js"
  },
  "keywords": [
    "javascript",
    "typescript",
    "framework",
    "eda",
    "EDA",
    "semantic",
    "scenarios"
  ],
  "author": "https://github.com/nogotech",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.30.1",
    "nodemon": "^3.1.10",
    "typescript": "^5.8.3"
  }
}
